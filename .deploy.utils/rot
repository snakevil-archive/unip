import sys

try:
    if 2 > len(sys.argv) or '-' != sys.argv[1]:
        print __doc__
        print
        print 'Usage:', sys.argv[0], '-'
        sys.exit(-1)

    clob = sys.stdin.read().strip()
    rot = ''
    for i in clob:
        j = ord(i)
        if 32 < j and j < 80:
            rot += chr(j + 47)
        elif 79 < j and j < 127:
            rot += chr(j - 47)
        else:
            rot += i
    rot = rot.replace('\\', '\\\\').replace('\'', '\\\'')
    sys.stdout.write(";eval(_$ROT('" + rot + "'))")
except IOError as e:
    sys.exit(1)

